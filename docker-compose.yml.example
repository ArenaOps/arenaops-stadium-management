services:
  sqlserver:
    image: mcr.microsoft.com/mssql/server:2022-latest
    container_name: arenaops-sql
    ports:
      - "1433:1433"
    environment:
      - ACCEPT_EULA=Y
      - MSSQL_SA_PASSWORD=${MSSQL_SA_PASSWORD:-ArenaOps@2024!}
    volumes:
      - sql_data:/var/opt/mssql
    networks:
      - arenaops-network
    healthcheck:
      test: ["CMD-SHELL", "/opt/mssql-tools18/bin/sqlcmd -S localhost -U sa -P '${MSSQL_SA_PASSWORD:-ArenaOps@2024!}' -C -Q 'SELECT 1'"]
      interval: 10s
      timeout: 5s
      retries: 5

  redis:
    image: redis:7-alpine
    container_name: arenaops-redis
    ports:
      - "6379:6379"
    networks:
      - arenaops-network
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5

networks:
  arenaops-network:
    driver: bridge

volumes:
  sql_data:
